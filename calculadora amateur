/*
    Podrías hacer que la calculadora realice operaciones sean cuales sean el número de argumentos pasados a la función?*/

  let calculadora = (arr) => {
  let resultado = [];

  if (typeof num1 === 'number' && typeof num2 === 'number') {
    resultado = ['la suma es ' + (num1+num2), ' la resta es ' +(num1-num2), ' la division es ' +(num1/num2).toFixed(3), ' y la multiplicacion es '+(num1*num2)];
      return "entre "+ num1 +" y "+num2 +", el valor de "+resultado;
  } else if (typeof num1 === 'number' && typeof num2 !== 'number') {
    resultado = Math.sqrt(num1);
    return 'La raiz cuadrada de '+num1+ ' es '+resultado.toFixed(3);
  } else {
      return 'Por favor, ingrese datos validos (numeros)';
  }
 
  }

console.log(calculadora(2,3))
